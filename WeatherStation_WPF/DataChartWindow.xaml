        <Label Grid.Column="4" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="86" Width="160" Margin="0,25,0,0" FontFamily="Segoe UI Black" FontSize="20" >
