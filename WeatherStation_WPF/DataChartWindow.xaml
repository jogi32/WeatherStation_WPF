                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Label.Background> 
        </Label>
        <Label Grid.Column="1" Grid.Row="2" Name="Temp3" Content="NONE" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="86" Width="160" Margin="0,25,0,0" FontFamily="Segoe UI Black" FontSize="20" >
