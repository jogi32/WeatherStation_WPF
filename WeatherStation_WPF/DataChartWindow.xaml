        <Label Grid.Column="5" Grid.Row="2" Name="Lux" Content="NONE" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="86" Width="160" Margin="0,25,0,0" FontFamily="Segoe UI Black" FontSize="20" >
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>

        <Ellipse Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Name="Alarm_Temp"
                     Width="100"
                     Height="100"
                     Stroke="GreenYellow" StrokeThickness="10"
                     Fill="Green" >
            <Ellipse.Effect>
                <DropShadowEffect BlurRadius="20"/>
            </Ellipse.Effect>
        </Ellipse>
        <Ellipse Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Name="Alarm_Hum"
                     Width="100"
                     Height="100"
                     Stroke="GreenYellow" StrokeThickness="10"
                     Fill="Green" />
        <Ellipse Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" Name="Alarm_Other"
                     Width="100"
                     Height="100"
                     Stroke="GreenYellow" StrokeThickness="10"
                     Fill="Green" />
    </Grid>

</Window>
